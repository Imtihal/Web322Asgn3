<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title><%= project.title %> - Climate Solutions</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/main.css" rel="stylesheet" type="text/css">
    </head>

<body class="bg-base-100">
   <%- include('partials/navbar', { page: '' }) %>

<div class="container mx-auto p-4 py-8">

    <div class="hero bg-base-200 rounded-lg mb-8">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold"><%= project.title %></h1>
                <p class="py-6">In this page you will learn about the project: <%= project.title %></p>
            </div>
        </div>
    </div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">

    <div class="flex flex-col justify-center items-center">
        <img src="<%= project.feature_img_url %>" alt="Project" class="rounded-lg shadow-lg w-full ">
    </div>


    <div class="flex-1 space-y-4">
        <h2 class="text-3xl font-bold mb-4 text-center">Short Introduction</h2>
        <p class="text-lg leading-relaxed mb-4 text-center">
           <%= project.intro_short %>
        </p>

        <p class="text-lg leading-relaxed text-center">
            <%= project.impact %>
        </p>
        <div class="flex justify-between items-center mt-4">
            <div class="flex-1"></div>
            <div class="flex justify-center flex-1">
                <a href="<%= project.original_source_url %>" class="btn btn-outline bg-base-200" target="_blank">Learn More from the Source</a>
            </div>
            <div class="flex justify-end flex-1">
                <a href="#" class="btn btn-primary" onclick="history.back(); return false;">Go Back</a>
            </div>
        </div>
        
        <div class="bg-base-300 p-4 rounded-lg">
            <h3 class="text-xl font-bold mb-2">Random Quote</h3>
            <p id="quote" class="italic">Loading quote...</p>
            <p id="quote-author" class="font-bold"></p>
        </div>
    </div>
    
</div>

    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://dummyjson.com/quotes/random")
            .then(response => response.json())
            .then(data => {
                document.getElementById("quote").textContent = `"${data.quote}"`;
                document.getElementById("quote-author").textContent = `- ${data.author}`;
            })
            .catch(error => {
                document.getElementById("quote").textContent = "Failed to load quote.";
            });
        });
    </script>
</div>
        
        
    </div>
    </div>
    </div>